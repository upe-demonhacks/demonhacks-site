---
import FloatingPowerups from "../components/FloatingPowerups.astro";
import "../styles/animations.css";

interface Props {
	title: string;
	description?: string;
}

const {
	title,
	description = "CSS & UPE's first hackathon. Build, learn, and connect.",
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="blue-demon-favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&family=Silkscreen:wght@400;700&display=swap"
			rel="stylesheet"
		/>

		<!-- SEO -->
		<title>{title}</title>
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL("/og.png", Astro.site)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta
			property="twitter:image"
			content={new URL("/og.png", Astro.site)}
		/>
	</head>
	<body
		class="min-h-screen bg-primary text-gray-900 antialiased relative overflow-x-hidden"
	>
		<!-- Floating Background Power-ups -->
		<FloatingPowerups />

		<header
			class="bg-white/20 backdrop-blur-sm sticky top-0 relative z-10 flex"
			style="height: 80px;"
		>
			<div
				id="mobile-menu"
				class="bg-white/50 backdrop-blur-sm absolute top-20 left-0 w-full flex flex-col items-center space-y-4 py-4 md:hidden hidden"
			>
				<a
					href="/"
					class="text-black hover:text-orange font-medium transition"
					>Home</a
				>
				<a
					href="/register"
					class="text-black hover:text-orange font-medium transition"
					>Register</a
				>
				<a
					href="/faq"
					class="text-black hover:text-orange font-medium transition"
					>FAQ</a
				>
				<a
					href="/sponsors"
					class="text-black hover:text-orange font-medium transition"
					>Sponsors</a
				>
				<a
					href="/schedule"
					class="text-black hover:text-orange font-medium transition"
					>Schedule</a
				>
			</div>
			<nav
				class="mx-auto max-w-7xl w-full flex sm:px-6 lg:px-8"
				style="overflow: hidden; align-items: center;"
			>
				<div class="flex h-16 items-center justify-between w-full">
					<div class="flex items-center gap-2">
						<div class="text-3xl">
							<img
								src="demon-logo.gif"
								class="h-[80px] w-[80px]"
							/>
						</div>
						<a href="/" class="flex gap-0 flex-col">
							<span
								class="text-2xl text-white tracking-wide font-['Silkscreen']"
								>DEMONHACKS</span
							>
							<span
								class="text-lg font-semibold text-white/80 tracking-wider font-['Cinzel']"
								>DePaul University</span
							>
						</a>
					</div>
					<div class="hidden space-x-8 md:flex">
						<a
							href="/"
							class="text-white hover:text-orange font-medium transition"
							>Home</a
						>
						<a
							href="/register"
							class="text-white hover:text-orange font-medium transition"
							>Register</a
						>
						<a
							href="/faq"
							class="text-white hover:text-orange font-medium transition"
							>FAQ</a
						>
						<a
							href="/sponsors"
							class="text-white hover:text-orange font-medium transition"
							>Sponsors</a
						>
						<a
							href="/schedule"
							class="text-white hover:text-orange font-medium transition"
							>Schedule</a
						>
					</div>
					<div class="md:hidden">
						<button
							type="button"
							class="text-white hover:text-orange"
							aria-label="Open menu"
							id="menu-toggle"
						>
							<svg
								class="h-6 w-6"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M4 6h16M4 12h16M4 18h16"></path>
							</svg>
						</button>
					</div>
				</div>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer
			class="relative text-white border-gray-200 bg-gradient-to-b from-[#5C94FC] to-[#91C2FA]"
			style="border-top: 3px solid white;"
		>
			<div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
				<div class="grid gap-8 md:grid-cols-3">
					<div>
						<h3 class="mb-4 text-lg font-semibold">DemonHacks</h3>
						<p class="text-sm text-white/80">
							CSS & UPE's first hackathon. Build, learn, and
							connect.
						</p>
					</div>
					<div>
						<h3 class="mb-4 text-lg font-semibold">Quick Links</h3>
						<ul class="space-y-2 text-sm">
							<li>
								<a
									href="/register"
									class="text-white/80 hover:text-primary"
									>Register</a
								>
							</li>
							<li>
								<a
									href="/faq"
									class="text-white/80 hover:text-primary"
									>FAQ</a
								>
							</li>
							<li>
								<a
									href="/sponsors"
									class="text-white/80 hover:text-primary"
									>Sponsors</a
								>
							</li>
							<li>
								<a
									href="/schedule"
									class="text-white/80 hover:text-primary"
									>Schedule</a
								>
							</li>
						</ul>
					</div>
					<div>
						<h3 class="mb-4 text-lg font-semibold">Contact</h3>

						<p class="text-sm text-white/80">
							<a
								href="mailto:deltaupe@cdm.depaul.edu"
								class="hover:text-white transition-colors"
							>
								deltaupe@cdm.depaul.edu
							</a>
						</p>
						<p class="mt-2 text-sm text-white/80">
							<a
								href="https://upe.cdm.depaul.edu/"
								target="_blank"
								rel="noopener"
								class="hover:text-white transition-colors"
							>
								upe.cdm.depaul.edu
							</a>
						</p>

						<!-- Instagram -->
						<div
							class="mt-2 flex items-center gap-2 text-sm text-white/80"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="currentColor"
								class="bi bi-instagram"
								viewBox="0 0 16 16"
							>
								<path
									d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599s.453.546.598.92c.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.5 2.5 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.5 2.5 0 0 1-.92-.598 2.5 2.5 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233s.008-2.388.046-3.231c.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92s.546-.453.92-.598c.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92m-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217m0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334"
								></path>
							</svg>
							<a
								href="https://www.instagram.com/upe.depaul"
								target="_blank"
								rel="noopener"
								class="hover:text-white transition-colors"
							>
								@upe.depaul
							</a>

							<span class="text-white/50">|</span>
							<a
								href="https://www.instagram.com/depaulcss/"
								target="_blank"
								rel="noopener"
								class="hover:text-white transition-colors"
							>
								@depaulcss
							</a>
						</div>
					</div>
				</div>
				<div class="mt-8 pt-8 text-center text-sm text-white/80">
					<p>
						&copy; {new Date().getFullYear()} UPE & CSS DePaul. All rights
						reserved.
					</p>
				</div>
			</div>
			<!-- Mario Brick Ground - CSS Based -->
			<div class="w-full overflow-hidden" aria-hidden="true">
				<div class="flex">
					<div class="flex-shrink-0 flex">
						{
							Array.from({ length: 100 }).map(() => (
								<div class="w-8 h-8 bg-amber-700 border border-amber-900 flex-shrink-0" />
							))
						}
					</div>
				</div>
				<div class="flex" style="margin-left: -16px;">
					<div class="flex-shrink-0 flex">
						{
							Array.from({ length: 100 }).map(() => (
								<div class="w-8 h-8 bg-amber-700 border border-amber-900 flex-shrink-0" />
							))
						}
					</div>
				</div>
			</div>
		</footer>
		<script>
			const toggleButton = document.getElementById("menu-toggle");
			const mobileMenu = document.getElementById("mobile-menu");

			toggleButton?.addEventListener("click", () => {
				mobileMenu?.classList.toggle("hidden");
			});
		</script>
	</body>
</html>
