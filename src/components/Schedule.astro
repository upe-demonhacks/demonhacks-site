---
import { schedule } from '../data/site.ts';
---

<section id="schedule" class="py-20 bg-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
        Event <span class="bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">Schedule</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        Your complete guide to 48 hours of innovation, learning, and fun at DemonHacks 2024.
      </p>
    </div>

    <!-- Schedule timeline -->
    <div class="space-y-12">
      {schedule.map((day, dayIndex) => (
        <div class="relative">
          <!-- Day header -->
          <div class="flex items-center mb-8">
            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-xl font-bold text-lg shadow-lg">
              {day.day}
            </div>
            <div class="flex-1 h-px bg-gradient-to-r from-indigo-600/50 to-transparent ml-4"></div>
          </div>

          <!-- Events for the day -->
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-indigo-500 via-purple-500 to-indigo-500 opacity-30"></div>
            
            <div class="space-y-6">
              {day.events.map((event, eventIndex) => (
                <div class="relative flex items-start space-x-8 group">
                  <!-- Timeline dot -->
                  <div class="relative z-10 flex-shrink-0">
                    <div class="w-4 h-4 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full border-4 border-gray-950 group-hover:scale-125 transition-transform duration-200 shadow-lg"></div>
                  </div>
                  
                  <!-- Event content -->
                  <div class="flex-1 bg-gray-900/50 backdrop-blur-sm rounded-xl border border-gray-800 p-6 hover:border-indigo-500/50 transition-all duration-200 hover:bg-gray-800/50 min-h-[100px] flex items-center">
                    <div class="flex-1">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                        <h3 class="text-xl font-semibold text-white group-hover:text-indigo-300 transition-colors">
                          {event.title}
                        </h3>
                        <div class="bg-indigo-500/20 text-indigo-300 px-3 py-1 rounded-lg text-sm font-medium mt-2 sm:mt-0 w-fit">
                          {event.time}
                        </div>
                      </div>
                      <p class="text-gray-400 leading-relaxed">
                        {event.description}
                      </p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-indigo-900/20 to-purple-900/20 backdrop-blur-sm border border-gray-800 rounded-2xl p-8 max-w-2xl mx-auto">
        <h3 class="text-2xl font-bold text-white mb-4">Ready to Join Us?</h3>
        <p class="text-gray-400 mb-6">
          Don't miss out on this incredible opportunity to learn, create, and connect with fellow innovators.
        </p>
        <a 
          href="#register" 
          class="inline-flex items-center bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white px-8 py-3 rounded-xl font-semibold transition-all hover:scale-105 shadow-lg"
        >
          Register Now
          <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .group:hover .timeline-content {
    animation: fadeInUp 0.3s ease-out;
  }
</style>