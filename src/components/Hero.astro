---
import { siteConfig } from '../data/site.ts';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated background -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-950 to-black">
    <!-- Animated grid pattern -->
    <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
    
    <!-- Floating particles/dots -->
    <div class="absolute inset-0">
      <div class="floating-particle absolute top-1/4 left-1/4 w-2 h-2 bg-indigo-500 rounded-full opacity-60"></div>
      <div class="floating-particle absolute top-3/4 left-3/4 w-1 h-1 bg-purple-500 rounded-full opacity-80 animation-delay-1000"></div>
      <div class="floating-particle absolute top-1/2 left-1/6 w-1.5 h-1.5 bg-blue-500 rounded-full opacity-50 animation-delay-2000"></div>
      <div class="floating-particle absolute top-1/6 right-1/4 w-1 h-1 bg-indigo-400 rounded-full opacity-70 animation-delay-3000"></div>
      <div class="floating-particle absolute bottom-1/4 right-1/6 w-2 h-2 bg-purple-400 rounded-full opacity-40 animation-delay-4000"></div>
    </div>
    
    <!-- Gradient overlays for depth -->
    <div class="absolute inset-0 bg-gradient-radial from-transparent via-transparent to-gray-950 opacity-60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Badge -->
    <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-300 text-sm font-medium mb-8 backdrop-blur-sm">
      <span class="w-2 h-2 bg-indigo-400 rounded-full mr-2 animate-pulse"></span>
      Registration Now Open
    </div>

    <!-- Main heading -->
    <h1 class="text-4xl sm:text-6xl lg:text-7xl font-black mb-6 leading-tight">
      <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
        {siteConfig.name}
      </span>
    </h1>

    <!-- Tagline -->
    <p class="text-xl sm:text-2xl lg:text-3xl text-gray-300 font-light mb-4 max-w-4xl mx-auto">
      {siteConfig.tagline}
    </p>

    <!-- Description -->
    <p class="text-lg text-gray-400 mb-12 max-w-3xl mx-auto">
      {siteConfig.description}
    </p>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{siteConfig.stats.participants}</div>
        <div class="text-gray-400 text-sm font-medium">Participants</div>
      </div>
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{siteConfig.stats.prizes}</div>
        <div class="text-gray-400 text-sm font-medium">in Prizes</div>
      </div>
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{siteConfig.stats.hours}</div>
        <div class="text-gray-400 text-sm font-medium">Hours</div>
      </div>
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{siteConfig.stats.sponsors}</div>
        <div class="text-gray-400 text-sm font-medium">Sponsors</div>
      </div>
    </div>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
      <a 
        href={siteConfig.registrationUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all hover:scale-105 shadow-xl hover:shadow-indigo-500/25 min-w-[200px]"
      >
        Register Now
        <svg class="inline-block ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </a>
      
      <a 
        href="#about" 
        class="group border border-gray-600 hover:border-gray-400 text-gray-300 hover:text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all hover:bg-gray-800/50 min-w-[200px]"
      >
        Learn More
        <svg class="inline-block ml-2 w-5 h-5 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>

    <!-- Event details -->
    <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-8 text-gray-400">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>{siteConfig.date}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>{siteConfig.location}</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(99, 102, 241, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: grid-move 20s linear infinite;
  }
  
  @keyframes grid-move {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }
  
  .floating-particle {
    animation: float 6s ease-in-out infinite;
  }
  
  .animation-delay-1000 {
    animation-delay: 1s;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-3000 {
    animation-delay: 3s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.6; }
    25% { transform: translateY(-20px) translateX(10px); opacity: 1; }
    50% { transform: translateY(-10px) translateX(-10px); opacity: 0.8; }
    75% { transform: translateY(-15px) translateX(5px); opacity: 0.9; }
  }
  
  .bg-gradient-radial {
    background: radial-gradient(circle at center, var(--tw-gradient-stops));
  }
</style>