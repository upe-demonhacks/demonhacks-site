---
import { sponsors } from '../data/site.ts';
---

<section id="sponsors" class="py-20 bg-gray-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
        Our <span class="bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">Sponsors</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        DemonHacks is made possible by our amazing sponsors who believe in fostering innovation and supporting the next generation of developers.
      </p>
    </div>

    <!-- Title Sponsors -->
    {sponsors.title.length > 0 && (
      <div class="mb-16 text-center">
        <h3 class="text-2xl font-bold text-white mb-8">Title Sponsor</h3>
        <div class="flex justify-center">
          {sponsors.title.map((sponsor) => (
            <div class="bg-white rounded-2xl p-12 shadow-2xl hover:shadow-indigo-500/25 transition-all duration-300 hover:scale-105 max-w-sm">
              <div class="h-24 flex items-center justify-center">
                <span class="text-4xl font-bold text-gray-800">{sponsor.name}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Gold Sponsors -->
    {sponsors.gold.length > 0 && (
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-white mb-8 text-center">Gold Sponsors</h3>
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {sponsors.gold.map((sponsor) => (
            <div class="bg-gradient-to-br from-yellow-500/10 to-yellow-600/10 border border-yellow-500/20 rounded-xl p-8 hover:border-yellow-500/40 transition-all duration-300 hover:scale-105 backdrop-blur-sm">
              <div class="h-16 flex items-center justify-center">
                <span class="text-2xl font-bold text-white">{sponsor.name}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Silver Sponsors -->
    {sponsors.silver.length > 0 && (
      <div class="mb-16">
        <h3 class="text-2xl font-bold text-white mb-8 text-center">Silver Sponsors</h3>
        <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {sponsors.silver.map((sponsor) => (
            <div class="bg-gradient-to-br from-gray-400/10 to-gray-500/10 border border-gray-400/20 rounded-xl p-6 hover:border-gray-400/40 transition-all duration-300 hover:scale-105 backdrop-blur-sm">
              <div class="h-12 flex items-center justify-center">
                <span class="text-lg font-semibold text-white">{sponsor.name}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Sponsor Benefits -->
    <div class="bg-gradient-to-r from-indigo-900/20 to-purple-900/20 backdrop-blur-sm border border-gray-800 rounded-2xl p-8 mb-12">
      <h3 class="text-2xl font-bold text-white mb-6 text-center">Why Sponsor DemonHacks?</h3>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-indigo-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM9 9a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-white mb-2">Talent Recruitment</h4>
          <p class="text-gray-400">Connect with top students and identify potential interns and full-time hires.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-white mb-2">Brand Exposure</h4>
          <p class="text-gray-400">Showcase your company to 200+ passionate students and tech enthusiasts.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-white mb-2">Innovation Access</h4>
          <p class="text-gray-400">See cutting-edge projects and potentially discover your next big idea.</p>
        </div>
      </div>
    </div>

    <!-- Become a Sponsor CTA -->
    <div class="text-center">
      <h3 class="text-2xl font-bold text-white mb-4">Interested in Sponsoring?</h3>
      <p class="text-gray-400 mb-8 max-w-2xl mx-auto">
        Join our community of forward-thinking companies supporting the next generation of innovators.
      </p>
      <a 
        href="mailto:deltaupe@cdm.depaul.edu?subject=DemonHacks%202024%20Sponsorship%20Inquiry"
        class="inline-flex items-center bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all hover:scale-105 shadow-xl"
      >
        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Become a Sponsor
      </a>
    </div>
  </div>
</section>