---
import Layout from "../layouts/Layout.astro";

// Redirect to external registration site
const externalRegistrationUrl = "https://register.demonhacks.org/";
---

<Layout
	title="Register — DemonHacks"
	description="Register for DemonHacks, CSS & UPE's first hackathon at DePaul University!"
>
	<section class="mx-auto max-w-5xl px-4 py-16 sm:px-6 lg:px-8">
		<div class="text-center">
			<h1 class="mb-4 text-4xl font-bold text-primary">
				Register for DemonHacks
			</h1>
			<p class="text-lg text-gray-600 mb-8">
				You will be redirected to our registration portal.
			</p>
			<a
				href={externalRegistrationUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="inline-block rounded-lg bg-orange px-8 py-4 text-xl font-semibold text-white shadow-lg hover:bg-orange-dark transition btn-glow"
			>
				Go to Registration →
			</a>
			<p class="mt-6 text-sm text-gray-500">
				If you are not redirected automatically,
				<a
					href={externalRegistrationUrl}
					class="text-white/90 hover:underline">click here</a
				>.
			</p>
		</div>
	</section>
</Layout>

<script define:vars={{ externalRegistrationUrl }}>
	// Auto-redirect after 2 seconds
	setTimeout(() => {
		window.location.href = externalRegistrationUrl;
	}, 2000);
</script>
