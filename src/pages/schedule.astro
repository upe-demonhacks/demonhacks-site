---
import Layout from '../layouts/Layout.astro';

const day1Schedule = [
	{ time: '09:00 AM', title: 'Check-in & Registration', location: 'Lobby' },
	{ time: '10:00 AM', title: 'Opening Ceremony', location: 'Auditorium' },
	{ time: '11:00 AM', title: 'Hacking Begins!', location: 'All Rooms' },
	{ time: '12:30 PM', title: 'Lunch', location: 'Cafeteria' },
	{ time: '02:00 PM', title: 'Workshop: Intro to Web Development', location: 'Room 201' },
	{ time: '03:30 PM', title: 'Workshop: APIs & Integrations', location: 'Room 202' },
	{ time: '05:00 PM', title: 'Team Formation & Networking', location: 'Lounge' },
	{ time: '06:30 PM', title: 'Dinner', location: 'Cafeteria' },
	{ time: '08:00 PM', title: 'Workshop: UI/UX Basics', location: 'Room 201' },
	{ time: '11:00 PM', title: 'Midnight Snack', location: 'Lounge' }
];

const day2Schedule = [
	{ time: '08:00 AM', title: 'Breakfast', location: 'Cafeteria' },
	{ time: '10:00 AM', title: 'Hacking Ends', location: 'All Rooms' },
	{ time: '10:15 AM', title: 'Project Submissions Due', location: 'Devpost' },
	{ time: '11:00 AM', title: 'Project Expo & Judging', location: 'Main Hall' },
	{ time: '01:00 PM', title: 'Lunch', location: 'Cafeteria' },
	{ time: '02:00 PM', title: 'Final Presentations', location: 'Auditorium' },
	{ time: '03:30 PM', title: 'Awards Ceremony', location: 'Auditorium' },
	{ time: '04:30 PM', title: 'Closing & Group Photo', location: 'Auditorium' }
];
---

<Layout 
	title="Schedule ‚Äî DemonHacks" 
	description="DemonHacks event schedule - workshops, hacking, and awards"
>
	<section class="bg-primary pt-16">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="mb-4 text-4xl text-black font-bold">Event Schedule</h1>
				<p class="mx-auto max-w-2xl text-xl text-white/90">
					A packed weekend of workshops, hacking, and community. All times subject to change.
				</p>
			</div>
		</div>
	</section>

	<section class="mx-auto max-w-5xl px-4 py-16 sm:px-6 lg:px-8">
		<div class="mb-16">
			<div class="mb-12 text-center">
				<div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-white text-2xl font-bold text-primary shadow-lg">
					1
				</div>
				<h2 class="text-3xl text-white font-bold">Day 1 ‚Äî Saturday</h2>
			</div>

			<!-- Vertical Timeline -->
			<div class="relative">
				<!-- Vertical Line -->
				<div class="absolute left-8 top-0 bottom-0 w-1 bg-white/30" aria-hidden="true"></div>

				<div class="space-y-8">
					{day1Schedule.map((event, index) => (
						<div class="timeline-item relative flex items-start gap-6 animate-fade-up">
							<!-- Timeline Dot -->
							<div class="relative z-10 flex-shrink-0">
								<div class="flex h-16 w-16 items-center justify-center rounded-full bg-white shadow-lg">
									<div class="h-4 w-4 rounded-full bg-primary"></div>
								</div>
							</div>

							<!-- Event Card -->
							<div class="flex-grow pb-8">
								<div class="rounded-lg bg-white p-6 shadow-md transition hover:shadow-lg">
									<div class="mb-2 flex items-center justify-between">
										<span class="text-lg font-bold text-primary">{event.time}</span>
										<span class="text-sm text-gray-500">üìç {event.location}</span>
									</div>
									<h3 class="text-xl font-semibold text-gray-900">{event.title}</h3>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>

		<div>
			<div class="mb-12 text-center">
				<div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-white text-2xl font-bold text-primary shadow-lg">
					2
				</div>
				<h2 class="text-3xl text-white font-bold">Day 2 ‚Äî Sunday</h2>
			</div>

			<!-- Vertical Timeline -->
			<div class="relative">
				<!-- Vertical Line -->
				<div class="absolute left-8 top-0 bottom-0 w-1 bg-white/30" aria-hidden="true"></div>

				<div class="space-y-8">
					{day2Schedule.map((event, index) => (
						<div class="timeline-item relative flex items-start gap-6 animate-fade-up">
							<!-- Timeline Dot -->
							<div class="relative z-10 flex-shrink-0">
								<div class="flex h-16 w-16 items-center justify-center rounded-full bg-white shadow-lg">
									<div class="h-4 w-4 rounded-full bg-primary"></div>
								</div>
							</div>

							<!-- Event Card -->
							<div class="flex-grow pb-8">
								<div class="rounded-lg bg-white p-6 shadow-md transition hover:shadow-lg">
									<div class="mb-2 flex items-center justify-between">
										<span class="text-lg font-bold text-primary">{event.time}</span>
										<span class="text-sm text-gray-500">üìç {event.location}</span>
									</div>
									<h3 class="text-xl font-semibold text-gray-900">{event.title}</h3>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
	</section>

	<section class="bg-gray-50 py-16">
		<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
			<div class="rounded-lg bg-white p-8 shadow">
				<h2 class="mb-4 text-2xl font-bold">Important Notes</h2>
				<ul class="space-y-3 text-gray-700">
					<li class="flex items-start">
						<svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-primary" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span>Times and locations are subject to change. Check back for updates or follow our announcements.</span>
					</li>
					<li class="flex items-start">
						<svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-primary" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span>Workshops are optional but highly recommended for beginners.</span>
					</li>
					<li class="flex items-start">
						<svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-primary" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span>All meals and snacks are included and accommodate dietary restrictions.</span>
					</li>
					<li class="flex items-start">
						<svg class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-primary" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
						</svg>
						<span>Project submissions must be completed on Devpost by 10:15 AM on Sunday.</span>
					</li>
				</ul>
			</div>
		</div>
	</section>
	<script>
		const items = document.querySelectorAll(".timeline-item");

		const observer = new IntersectionObserver(
			(entries) => {
			entries.forEach((entry) => {
				if (entry.isIntersecting) {
				entry.target.classList.add("show");
				observer.unobserve(entry.target);
				}
			});
			},
			{ threshold: 0.2 }
		);

		items.forEach((item) => observer.observe(item));
	</script>
</Layout>

